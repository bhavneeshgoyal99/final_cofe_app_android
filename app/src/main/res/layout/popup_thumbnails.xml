<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="20dp"
    android:id="@+id/llPopupThumbnails"
    android:background="@color/black_opac_10"
    android:orientation="vertical"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_gravity="end"
        android:layout_marginTop="60dp"
        android:background="@drawable/solid_white_20"
        android:orientation="vertical"
        android:elevation="20dp"

        android:padding="10dp">

        <LinearLayout
            android:id="@+id/llThumbnails"
            android:layout_width="wrap_content"
            android:layout_height="50dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@null"

                android:src="@drawable/ic_default" />


            <TextView
                android:id="@+id/tvThumbnails"
                style="@style/user_info_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="Thumbnail Mode"
                android:textSize="15sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_transparent" />

        <TextView
            style="@style/user_info_normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivright"
            android:text="Sort"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/llDefault"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_default" />


            <TextView
                android:id="@+id/tvDefault"
                style="@style/user_info_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="Default"
                android:textColor="@color/theme"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOnline"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@null"

                android:src="@drawable/ic_online" />


            <TextView
                android:id="@+id/tvOnlineOffline"
                style="@style/user_info_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="Online/Offline"
                android:textSize="15sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@null"

                android:src="@drawable/ic_add_time" />


            <TextView
                style="@style/user_info_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="Add Timer"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@null"

                android:src="@drawable/ic_custom" />


            <TextView
                style="@style/user_info_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="Custom"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

