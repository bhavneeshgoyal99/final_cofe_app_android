<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/point_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/point_the_qr_code_at_the_camera"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/point_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maintain_a_distance_of_25_35_cm"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/point_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/move_your_phone_away_after_you_hear_the_configuring_wi_fi_alert_tone"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/point_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_wi_fi_is_configured_after_you_hear_the_configured_alert_tone"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>
</LinearLayout>
