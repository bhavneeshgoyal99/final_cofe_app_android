<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:minHeight="@dimen/title_height"
    android:orientation="vertical"
    android:background="@drawable/rounder_corner"
    >

    <com.xm.ui.widget.ListSelectItem
        android:id="@+id/lsi_dev_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:Cap=""
        app:CapColor="@color/default_normal_text_color"
        app:CapSize="@dimen/normal_text_size"
        app:ImageLeft1="@mipmap/xmjp_camera"
        app:ImageLeft2="@mipmap/xmjp_camera"
        app:ImageLeftHeight="40dp"
        app:ImageLeftWidth="40dp"
        app:ItemTipColor="@color/hint_color"
        app:ItemTipSize="@dimen/small_text_size"
        app:ItemTitleColor="@color/default_normal_text_color"
        app:ItemTitleSize="@dimen/normal_text_size"
        app:ShowBottomLine="false"
        app:ShowTopLine="false"
        app:Tip=""
        app:Title="111"
        app:leftMargin="0dp"
        android:visibility="gone"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/half_of_normal_padding"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--推送消息-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_turn_to_alarm_msg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/push_msg"
                android:visibility="gone"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5"
                tools:visibility="visible" />
            <!--推送设置-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_turn_to_push_set"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/push_set"
                android:visibility="gone"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5"
                tools:visibility="visible" />
            <!--云服务-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_turn_to_cloud_service"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/cloud_service"
                android:visibility="gone"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5"
                tools:visibility="visible" />
            <!--修改设备名称-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_modify_dev_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/modify_dev_name"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5" />
            <!--分享设备-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_share_dev"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/device_share_manage"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5" />

            <!--修改设备登录名和密码-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_edit_user_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/edit_local_user_password"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5" />

            <!--SD卡录像回放-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_sd_playback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/playback"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5" />

            <!--唤醒主控-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_wake_up_master"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/wake_up_master"
                android:visibility="gone"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5" />

            <!--Ping-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_ping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="Ping"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5" />

            <!--门锁和摇头机之间联动-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_inter_device_linkage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/inter_device_linkage_link"
                android:visibility="gone"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5" />

            <!--设备能力集-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_dev_ability"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/dev_ability"
                android:visibility="visible"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5" />

            <!--从服务器获取设备Token-->
            <com.xm.ui.widget.BtnColorBK
                android:id="@+id/btn_update_dev_token"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:text="@string/get_dev_token_from_server"
                android:visibility="visible"
                app:no_press_solid="@color/white"
                app:pressed_solid="#FCF0E5" />
        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <!-- Device Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="8dp"
            >

            <!-- Device Name and Icons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/llInfo"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/dev_name"
                    />

                <LinearLayout
                    android:id="@+id/llInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/is_shared_device_txtv"
                        android:visibility="gone"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:id="@+id/cloud_info_ll"
                        android:visibility="visible"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/user_rounded_icon"
                            android:contentDescription="AI"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/open_ai_setting"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cloud"
                            android:contentDescription="Upload"
                            android:id="@+id/btn_turn_to_cloud_service1"
                            android:visibility="gone"

                            />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ellipsis_vertical_1"
                            android:contentDescription="More"
                            android:layout_marginStart="8dp"
                            android:id="@+id/open_popup"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Device Thumbnail -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <!--   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="200dp"
                       android:scaleType="centerCrop"
                       android:src="@drawable/demo_image"
                       android:contentDescription="Device Thumbnail"
                       android:id="@+id/banner_img"
                       />
   -->
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/banner_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/demo_image"
                    android:layout_centerVertical="true"
                    app:riv_corner_radius="10dip"
                    app:riv_mutate_background="true"
                    />

                <!-- Sleep Badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:text="Sleep"
                    android:padding="4dp"
                    android:background="@drawable/edit_text_background"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:id="@+id/status_txtv"/>
            </RelativeLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/llbottomIcons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/btn_share_dev1"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_share"
                        android:contentDescription="Share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/btn_turn_to_alarm_msg1">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_conversation"
                        android:contentDescription="Message" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/btn_turn_to_push_set1"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mute"
                        android:contentDescription="Notification" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/setting_icon"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_setting"
                        android:contentDescription="Settings" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>