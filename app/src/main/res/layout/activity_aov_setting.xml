<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:uilib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:id="@+id/parent_rl">

    <!-- AppBarLayout for the Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:elevation="0dp"
        app:liftOnScroll="false"
        android:translationZ="0.1dp"
        android:stateListAnimator="@null"
        >

        <!-- Top Title Layout -->
        <include
            android:id="@+id/layoutTop"
            layout="@layout/include_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:visibility="gone"/>

        <!-- Toolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/titlebar_with_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:elevation="0dp"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/xm_root_layout"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_margin="@dimen/half_of_normal_margin"
        >

        <include
            android:id="@+id/xb_idr_setting"
            layout="@layout/include_title_layout"
            android:visibility="gone"/>


        <com.xm.ui.widget.ListSelectItem
            android:visibility="gone"
            android:id="@+id/lsi_battery_manager_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            uilib:Title="TR_Setting_Battery_Management"
            uilib:ItemTitleColor="@color/default_normal_text_color"
            uilib:ItemTitleSize="@dimen/small_text_size"
            uilib:LineColor="@color/line_color"
            uilib:ShowBottomLine="true"
            uilib:ImageRight1="@mipmap/icon_next"
            uilib:ImageRight2="@mipmap/icon_next"
            uilib:RightClickable="false"/>

        <com.xm.ui.widget.ListSelectItem
            android:visibility="gone"
            android:id="@+id/lsi_work_mode_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            uilib:Title="TR_Setting_Mode_Of_Work"
            uilib:ItemTitleColor="@color/default_normal_text_color"
            uilib:ItemTitleSize="@dimen/small_text_size"
            uilib:LineColor="@color/line_color"
            uilib:ShowBottomLine="true"
            uilib:ImageRight1="@mipmap/icon_next"
            uilib:ImageRight2="@mipmap/icon_next"
            uilib:RightClickable="false"/>

        <com.xm.ui.widget.ListSelectItem
            android:visibility="gone"
            android:id="@+id/lsi_light_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            uilib:Title="TR_Light_Settings"
            uilib:ItemTitleColor="@color/default_normal_text_color"
            uilib:ItemTitleSize="@dimen/small_text_size"
            uilib:LineColor="@color/line_color"
            uilib:ShowBottomLine="true"
            uilib:ImageRight1="@mipmap/icon_next"
            uilib:ImageRight2="@mipmap/icon_next"
            uilib:RightClickable="false"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>