                <TextView
                    android:id="@+id/tv_battery_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_wifi_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/top_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="visible"
                android:layout_below="@+id/ll_dev_state"
                >

                <ImageButton
                    android:id="@+id/back_arrow_img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/back_arrow_icon_white"
                    android:background="@android:color/transparent"
                    android:contentDescription="Back"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="aov"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>

            <!-- Settings Icon -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:id="@+id/side_setting_icon_rl"
                android:layout_below="@+id/ll_dev_state"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:layout_weight=".1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"

                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight=".04">
                        <ImageButton
                            android:id="@+id/settings_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/setting_icon_2"
                            android:background="@android:color/transparent"
                            android:contentDescription="Settings" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight=".03">
                        <ImageButton
                            android:id="@+id/rotate_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/mobile_rotate_white"
                            android:background="@android:color/transparent"
                            android:contentDescription="Rotate"
                            android:layout_marginEnd="8dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight=".03">
                        <ImageButton
                            android:id="@+id/stobe_img"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/white_bulb_icon"
                            android:background="@android:color/transparent"
                            android:contentDescription="Rotate"
                            android:layout_marginEnd="8dp"
                            android:tag="23"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/tvRecordingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jhgf"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"

                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_monitor_fun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/wnd_layout"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/llActions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/rv_monitor_fun"
            >

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="@color/black">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".02"
                    android:layout_height="24dp"
                    android:id="@+id/iv_answer_call_ll"
                    android:visibility="gone"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/call_icon"
                        android:contentDescription="Call"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/iv_answer_call"
                        android:tag="27"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".02"
                    android:layout_height="24dp"
                    android:id="@+id/microphone_ll"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/mic_icon"
                        android:contentDescription="Microphone"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/microphone"
                        android:tag="5"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".02"
                    android:layout_height="24dp"
                    android:id="@+id/sound_ll"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/speaker_icon_1"
                        android:contentDescription="mute"
                        android:layout_marginEnd="8dp"
                        android:tag="0"
                        android:id="@+id/sound"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".02"
                    android:layout_height="24dp"
                    android:id="@+id/video_ll"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:src="@drawable/video_icon"
                        android:contentDescription="Speaker"
                        android:layout_marginEnd="8dp"
                        android:tag="2"
                        android:id="@+id/video"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".02"
                    android:layout_height="24dp"
                    android:id="@+id/camera_ll"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/camera_camer_1"
                        android:contentDescription="Camera"
                        android:layout_marginEnd="8dp"
                        android:tag="1"
                        android:id="@+id/camera"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".02"
                    android:layout_height="24dp"
                    android:id="@+id/sd_ll"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/sd_icon"
                        android:contentDescription="UHD"
                        android:id="@+id/sd"
                        android:tag="5"
                        />
                </LinearLayout>
            </LinearLayout>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:visibility="gone"/>

            <!-- ViewPager2 for Tab Content -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/main_buttons_ll"
                >

                <!-- Button Group -->
                <LinearLayout
                    android:id="@+id/buttons_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:transitionName="sharedElement"

                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_layout1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/realtime_text"
                        android:background="@drawable/squaer_button_background"
                        android:textColor="@android:color/black"
                        />

                    <Button
                        android:id="@+id/btn_layout2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/playback"
                        android:background="@drawable/squaer_button_background_ubselected"
                        android:textColor="@android:color/black"/>

                    <Button
                        android:id="@+id/btn_layout3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="@string/message"
                        android:background="@drawable/squaer_button_background_ubselected"
                        android:textColor="@android:color/black"
                        />
                </LinearLayout>

                <!-- Layout 1 -->
                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <include
                            layout="@layout/fragment_real_time"
                            />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>

                <!-- Layout 2 -->
                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/layout2_background"
                    android:visibility="gone"
                    >
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_below="@+id/layoutTop"
                        android:background="#ff000000"
                        >

                        <com.xm.ui.media.MultiWinLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            uilib:NormalFrameBg="@drawable/wnd_margin_normal"
                            uilib:SelectedFrameBg="@drawable/wnd_margin_normal"
                            android:background="@color/wnd_cover_gray" />
                        <!--多目Sensor切换-->
                    </RelativeLayout>

                </LinearLayout>

                <!-- Layout 3 -->
                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <FrameLayout
                        android:id="@+id/fragment_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
            </LinearLayout>



            <!-- Completed Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:backgroundTint="#A7E6D1"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_margin="16dp"
                android:visibility="gone"/>
        </LinearLayout>



    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragment_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>