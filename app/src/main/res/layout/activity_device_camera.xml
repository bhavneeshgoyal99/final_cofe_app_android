                    <FrameLayout
                        android:id="@+id/content_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    &lt;!&ndash; Navigation Drawer &ndash;&gt;
                    <com.google.android.material.navigation.NavigationView
                        android:id="@+id/nav_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start" />

                </androidx.drawerlayout.widget.DrawerLayout>-->

                <ProgressBar
                    android:id="@+id/batteryProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:progressDrawable="@drawable/battery_indicator"
                    android:max="100"
                    android:progress="10"
                    android:layout_marginLeft="@dimen/half_of_normal_margin"
                    android:layout_marginTop="@dimen/half_of_normal_margin"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/bt_txtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/batteryProgressBar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/button_margin"
                    android:layout_marginTop="@dimen/half_of_normal_margin"
                    android:background="@color/black"
                    android:text="@string/watch_time"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/wifiSignalView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/half_of_normal_margin"
                    android:layout_marginTop="@dimen/half_of_normal_margin"
                    />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/half_of_normal_margin"
                    />
                <!--<com.rejowan.abv.ABV
                    android:id="@+id/abv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:abvNormalBgColor="@color/green"
                    app:abvNormalLevelColor="@color/green"
                    app:abvWarningBgColor="#FFCF96"
                    app:abvWarningLevelColor="#B71C1C"
                    app:abvCriticalBgColor="#F0AFAF"
