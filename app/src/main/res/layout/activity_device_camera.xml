                <!--多目Sensor切换-->
                <com.xm.ui.widget.XMScaleSeekBar
                    android:id="@+id/sb_video_scale"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:itemBackground="@color/default_normal_text_color"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:progress="0"
                    android:visibility="gone"
                    uilib:subCount="7" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_dev_state"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/black"
                android:orientation="horizontal">
                <!--<androidx.drawerlayout.widget.DrawerLayout
                    android:id="@+id/drawer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    &lt;!&ndash; Main Content &ndash;&gt;
                    <FrameLayout
                        android:id="@+id/content_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    &lt;!&ndash; Navigation Drawer &ndash;&gt;
                    <com.google.android.material.navigation.NavigationView
                        android:id="@+id/nav_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start" />

                </androidx.drawerlayout.widget.DrawerLayout>-->

                <ProgressBar
                    android:id="@+id/batteryProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/half_of_normal_margin"
                    android:layout_marginTop="@dimen/half_of_normal_margin"
                    android:max="100"
                    android:progress="10"
                    android:progressDrawable="@drawable/battery_indicator"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bt_txtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/button_margin"
                    android:layout_marginTop="@dimen/half_of_normal_margin"
                    android:layout_toEndOf="@+id/batteryProgressBar"
                    android:background="@color/black"
                    android:text="@string/watch_time"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/wifiSignalView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/half_of_normal_margin"
                    android:layout_marginRight="@dimen/half_of_normal_margin" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/half_of_normal_margin"
                    android:background="@color/black"
                    android:gravity="center"
                    android:textColor="@color/white" />
                <!--<com.rejowan.abv.ABV
                    android:id="@+id/abv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:abvNormalBgColor="@color/green"
                    app:abvNormalLevelColor="@color/green"
                    app:abvWarningBgColor="#FFCF96"
                    app:abvWarningLevelColor="#B71C1C"
                    app:abvCriticalBgColor="#F0AFAF"
                    app:abvCriticalLevelColor="#FF0E0E"
                    app:abvChargingBgColor="#00FFFFFF"
                    app:abvChargingLevelColor="#4DD86C"
                    app:abvChargeLevel="5"
                    app:abvWarningChargeLevel="30"
                    app:abvCriticalChargeLevel="10"
                    app:abvRadius="10"
                    app:abvBatteryOrientation="landscape"
                    app:abvSize="10"
                    app:abvChargingIcon="@drawable/ic_charge_abv"
