<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_transparent"
    android:orientation="vertical"

    tools:context=".ui.activity.AlarmPeriodActivity">

    <include layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <!--<RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <RadioButton
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="24H Alarm"

                android:checked="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_transparent" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rbCustomAlaram"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Custom Alarm"/>
        </RadioGroup>-->


        <RelativeLayout
            android:id="@+id/rlOtherAlarm"
            android:layout_width="match_parent"
            android:layout_height="50dp">





            <TextView
                style="@style/user_info_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/ivright"
                android:text="@string/_24h_alarm"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/ivright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="10dp"
                android:src="@drawable/right_icon_1" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_transparent" />
        <RelativeLayout
            android:id="@+id/rlCustomAlarm"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <TextView
                style="@style/user_info_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/ivright1"
                android:text="@string/custom_alarm"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/ivright1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="10dp"
                android:src="@drawable/right_icon_1" />


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCustomAlarm"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

</LinearLayout>