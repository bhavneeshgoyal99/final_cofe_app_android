<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/parent_rl">

    <!-- AppBarLayout for the Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:elevation="0dp"
        app:liftOnScroll="false"
        android:translationZ="0.1dp"
        android:stateListAnimator="@null"
        >

        <!-- Top Title Layout -->
        <include
            android:id="@+id/layoutTop"
            layout="@layout/titlebar_with_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:visibility="visible"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/half_of_normal_margin"
        android:paddingLeft="@dimen/half_of_normal_margin"
        android:paddingRight="@dimen/half_of_normal_margin"
        android:fillViewport="true"
        android:layout_marginBottom="70dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- Top Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_turn_on_wifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="Turn on Wi-Fi"
                        android:drawableEnd="@drawable/ic_about"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btn_turn_on_bluetooth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="Turn on Bluetooth"
                        android:drawableEnd="@drawable/ic_about_24x24"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="8dp"
                        android:padding="12dp" />
                </LinearLayout>

                <!-- Search Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="Search for available devices"
                        android:gravity="left"
                        android:paddingHorizontal="8dp"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:gravity="right"
                        >

                        <ProgressBar
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:indeterminate="true"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="7dp"
                            android:layout_gravity="right"
                            />

                    </LinearLayout>
                </LinearLayout>



                <!-- Add Device Manually Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/default_normal_text_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add device manually"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:textColor="#555555"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/default_normal_text_color" />
                </LinearLayout>

                <!-- Device Options -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:background="@color/lighter_grey"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/white"
                        android:padding="15dp"
                        android:id="@+id/wifi_ll"
                        >

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_wifi_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Wi-Fi Camera"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="15dp"
                        android:background="@color/white"
                        android:id="@+id/g4_ll"

                        >

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_4g_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="4G Camera"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Add more devices similarly -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="15dp"
                        android:background="@color/white"
                        android:id="@+id/viot_ll"

                        >

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_viot_station" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="VIOT Station"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="15dp"
                        android:background="@color/white"
                        android:id="@+id/dvr_ll"

                        >

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_dvr_nvr" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="DVR/NVR"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Add more devices similarly -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="15dp"
                        android:background="@color/white"
                        android:id="@+id/wired_ll"

                        >

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_wired_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Wired Camera"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="15dp"
                        android:background="@color/white"
                        android:id="@+id/share_ll"
                        >

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_shared_device" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="From Shared Device"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Add more devices similarly -->

                </GridLayout>


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other ways to add device"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:layout_alignParentBottom="true"
                android:id="@+id/btn_show_bottom_sheet"
                android:background="@drawable/button_background"
                />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
