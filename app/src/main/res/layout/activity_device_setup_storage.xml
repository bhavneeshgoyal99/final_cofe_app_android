<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:uilib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dlg_calendar_date_bg">

    <include
        android:id="@+id/layoutTop"
        layout="@layout/include_title_layout"
        android:visibility="gone"/>

    <include
        android:id="@+id/layoutTop"
        layout="@layout/common_header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/data_rl"
        android:layout_below="@id/layoutTop"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/solid_white_10"
            android:orientation="vertical"
            android:id="@+id/main_layout_ll">

            <!-- 存储容量 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivStore"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="15dp"

                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_micro_sd_card"/>

                <TextView
                    android:id="@+id/tv_dev_about_hardware_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ivStore"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:text="@string/storage_capacity"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_dev_set_memory_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/tv_dev_about_hardware_version_title"
                    android:gravity="right"

                    android:textSize="12sp"
                    android:textColor="@color/text_color"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gray_transparent" />


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dev_about_hardware_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"
                    android:text="@string/residual_capacity"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/tv_dev_about_hardware_title"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"

                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:visibility="gone"
                android:background="@color/gray_transparent" />



            <RelativeLayout
                android:id="@+id/rl_sto_img_part"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                tools:visibility="gone"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sto_img_part_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"

                    android:text="@string/sto_img_part"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_sto_img_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/tv_sto_img_part_title"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <View
                android:id="@+id/viewImage"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:visibility="gone"
                android:background="@color/gray_transparent" />


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sto_video_part_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"

                    android:text="@string/sto_video_part"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_sto_video_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/tv_sto_video_part_title"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/gray_transparent" />

            <RelativeLayout
                android:id="@+id/rlFreeSpace"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:visibility="visible"
                tools:visibility="visible"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFreeSpace"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="15dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_micro_sd_card"/>

                <TextView
                    android:id="@+id/tvFreeSpace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:layout_marginLeft="40dp"

                    android:text="@string/free_space"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/tv_dev_set_memory_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/tvFreeSpace"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:visibility="visible"
                android:background="@color/gray_transparent" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFullStore"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="15dp"

                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_micro_sd_card"/>

                <TextView
                    android:id="@+id/tv_video_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivFullStore"
                    android:gravity="right"
                    android:text="@string/sto_video_full"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />

            </RelativeLayout>

            <RadioGroup
                android:id="@+id/rg_record_mode_while_full"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_sto_video_stop"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:text="@string/sto_video_stop"
                    android:checked="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/gray_transparent" />
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/rb_sto_video_cir"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:text="@string/sto_video_cir"/>
            </RadioGroup>




        </LinearLayout>

        <com.xm.ui.widget.BtnColorBK
            android:id="@+id/btn_dev_set_format_storage"
            style="@style/defaultButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/button_margin_top"
            android:layout_marginBottom="@dimen/button_margin_bottom"
            android:layout_marginHorizontal="10dp"
            android:text="@string/format"
            android:textColor="@color/colorAccent"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/no_data_rl"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_micro_sd_card"
            android:layout_centerInParent="true"
            android:id="@+id/sd_card_img"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sd_card_img"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="@dimen/button_margin"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:text="@string/storage_error_text"
            android:gravity="center"
            />

    </RelativeLayout>
</RelativeLayout>