<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:uilib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dlg_calendar_date_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/layoutTop"
        layout="@layout/include_title_layout"/>

    <LinearLayout
        android:id="@+id/layout_user_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_huge"
        android:paddingTop="@dimen/spacing_huge"
        android:paddingRight="@dimen/spacing_huge"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userIdTitle"
                style="@style/user_info_normal_text"
                android:layout_width="@dimen/textview_width_wide"
                android:layout_height="@dimen/textview_height_normal"
                android:text="@string/user_info_id" />

            <TextView
                android:id="@+id/tv_user_Id"
                style="@style/user_info_normal_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_height_normal"
                android:layout_alignBottom="@id/userIdTitle"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_toEndOf="@id/userIdTitle"
                tools:text="" />

        </RelativeLayout>

        <include layout="@layout/split_line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userNameTitle"
                style="@style/user_info_normal_text"
                android:layout_width="@dimen/textview_width_wide"
                android:layout_height="@dimen/textview_height_normal"
                android:text="@string/user_info_username" />

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/user_info_normal_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_height_normal"
                android:layout_alignBottom="@id/userNameTitle"
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_toEndOf="@id/userNameTitle"
                tools:text="" />

        </RelativeLayout>

        <include layout="@layout/split_line_horizontal" />

        <LinearLayout
            android:id="@+id/layoutUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userEmailTitle"
                style="@style/user_info_normal_text"
                android:layout_width="@dimen/textview_width_wide"
                android:layout_height="@dimen/textview_height_normal"
                android:text="@string/user_info_email" />

            <TextView
                android:id="@+id/tv_user_email"
                style="@style/user_info_normal_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_height_normal"
                tools:text="" />
        </LinearLayout>

        <include layout="@layout/split_line_horizontal" />

        <LinearLayout
            android:id="@+id/layoutUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userPhoneTitle"
                style="@style/user_info_normal_text"
                android:layout_width="@dimen/textview_width_wide"
                android:layout_height="@dimen/textview_height_normal"
                android:text="@string/user_info_phone" />

            <TextView
                android:id="@+id/tv_user_phone"
                style="@style/user_info_normal_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_height_normal"
                android:layout_marginStart="@dimen/spacing_small"
                tools:text="" />
        </LinearLayout>

        <include layout="@layout/split_line_horizontal" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_user_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/user_logout"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <include
        android:id="@+id/headerAccountInfo"
        layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerAccountInfo"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/about_account"
            android:textColor="@color/text_color"
            android:visibility="gone"
            android:textSize="@dimen/font_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/solid_white_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    style="@style/user_info_normal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/account"
                    android:textSize="@dimen/font_small" />


                <TextView
                    style="@style/textGraysmall"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ivRigh2"
                    android:text="@string/_669_367"
                        android:id="@+id/account_id_txtv"/>

                <ImageView
                    android:id="@+id/ivRigh2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/right_icon_1" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    style="@style/user_info_normal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/nickname"
                    android:textSize="@dimen/font_small" />


                <TextView
                    style="@style/textGraysmall"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ivRight"
                    android:text="@string/_669_367"
                    android:id="@+id/nick_nametxtv"/>

                <ImageView
                    android:id="@+id/ivRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/right_icon_1" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/user_info_normal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/country_region"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        style="@style/textGraysmall"

                        android:text="@string/switch_country_to_region_please_logout_an_dselect_again" />
                </LinearLayout>


                <TextView
                    style="@style/textGraysmall"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:text="@string/india" />


            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/abount_safety"
            android:textColor="@color/text_color"

            android:textSize="@dimen/font_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/solid_white_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/pass_rl">


                <TextView
                    style="@style/user_info_normal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/change_password"
                    android:textSize="@dimen/font_small" />


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/right_icon_1" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    style="@style/user_info_normal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/phone_number"
                    android:textSize="@dimen/font_small" />


                <TextView
                    style="@style/textGraysmall"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ivRight3"
                    android:text="@string/unbound" />

                <ImageView
                    android:id="@+id/ivRight3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/right_icon_1" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/email_rl">


                <TextView
                    style="@style/user_info_normal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/email"
                    android:textSize="@dimen/font_small" />


                <TextView
                    style="@style/textGraysmall"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ivRight5"
                    android:text="@string/bound" />

                <ImageView
                    android:id="@+id/ivRight5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/right_icon_1" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    style="@style/user_info_normal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/wechat"
                    android:textSize="@dimen/font_small" />


                <TextView
                    style="@style/textGraysmall"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ivRight4"
                    android:text="@string/unbound" />

                <ImageView
                    android:id="@+id/ivRight4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/right_icon_1" />


            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/solid_white_10">

            <TextView
                style="@style/user_info_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/switch_account"
                android:textSize="@dimen/font_small" />


        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/solid_white_10"
        android:id="@+id/logout_rl">

        <TextView
            style="@style/user_info_normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/log_out"
            android:textColor="@color/red"
            android:textSize="@dimen/font_small" />


    </RelativeLayout>




</RelativeLayout>

</LinearLayout>