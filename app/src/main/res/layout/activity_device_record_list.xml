<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:uilib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:id="@+id/parent_rl">

    <!-- AppBarLayout for the Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:elevation="0dp"
        app:liftOnScroll="false"
        android:translationZ="0.1dp"
        android:stateListAnimator="@null"
        android:visibility="gone">

        <include
            android:id="@+id/layoutTop"
            layout="@layout/include_title_layout"/>

        <include
            android:id="@+id/toolbar"
            layout="@layout/titlebar_with_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:elevation="0dp" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_background"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/parent_ll"
                android:background="@drawable/gradient_background"
                >

                <RelativeLayout
                    android:id="@+id/wnd_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff000000"
                    >
                <RelativeLayout
                    android:id="@+id/wnd_inner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="#ff000000"
                    android:transitionName="sharedElement"
                    >

                    <FrameLayout
                        android:id="@+id/layoutPlayWnd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.xm.ui.widget.XMSeekBar
                            android:id="@+id/xb_seek_to_record"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <RelativeLayout
                        android:id="@+id/videoProgressArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#8c000000"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/videoProgressCurrentTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textColor="#ffe0e0e0"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/videoProgressDurationTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="#ffe0e0e0"
                            android:textSize="12dp" />

                        <SeekBar
                            android:id="@+id/videoProgressSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/videoProgressDurationTime"
                            android:layout_toRightOf="@id/videoProgressCurrentTime"
                            android:maxHeight="5dp"
                            android:minHeight="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:progressDrawable="@drawable/video_control_seekbar_bg"
                            android:thumb="@mipmap/video_control_seekbar_thumb_bg" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_play_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/wnd_cover_gray"
                        android:text=""
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"/>


                </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@color/black"
                        android:id="@+id/action_btn_ll"
                        android:layout_below="@+id/wnd_inner_layout">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".02"
                            android:layout_height="24dp"
                            android:id="@+id/iv_answer_call_ll"
                            android:visibility="gone"

                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/call_icon"
                                android:contentDescription="Call"
                                android:layout_marginEnd="8dp"
                                android:id="@+id/iv_answer_call"
                                android:tag="27"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".02"
                            android:layout_height="24dp"
                            android:id="@+id/microphone_ll"
                            android:visibility="gone"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/mic_icon"
                                android:contentDescription="Microphone"
                                android:layout_marginEnd="8dp"
                                android:id="@+id/microphone"
                                android:tag="5"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".02"
                            android:layout_height="24dp"
                            android:id="@+id/sound_ll"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/speaker_icon_1"
                                android:contentDescription="mute"
                                android:layout_marginEnd="8dp"
                                android:tag="0"
                                android:id="@+id/sound"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".02"
                            android:layout_height="24dp"
                            android:id="@+id/video_ll"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:src="@drawable/video_icon"
                                android:contentDescription="Speaker"
                                android:layout_marginEnd="8dp"
                                android:tag="2"
                                android:id="@+id/video"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".02"
                            android:layout_height="24dp"
                            android:id="@+id/camera_ll"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/camera_camer_1"
                                android:contentDescription="Camera"
                                android:layout_marginEnd="8dp"
                                android:tag="1"
                                android:id="@+id/camera"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".02"
                            android:layout_height="24dp"
                            android:id="@+id/sd_ll"
                            android:visibility="gone"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/sd_icon"
                                android:contentDescription="UHD"
                                android:id="@+id/sd"
                                android:tag="5"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttons_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:transitionName="sharedElement"
                        android:layout_below="@+id/action_btn_ll"
                        >

                        <Button
                            android:id="@+id/btn_layout1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="@string/realtime_text"
                            android:background="@drawable/squaer_button_background"
                            android:textColor="@android:color/black"
                            />

                        <Button
                            android:id="@+id/btn_layout2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="@string/playback"
                            android:background="@drawable/squaer_button_background_ubselected"
                            android:textColor="@android:color/black"/>

                        <Button
                            android:id="@+id/btn_layout3"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="@string/message"
                            android:background="@drawable/squaer_button_background_ubselected"
                            android:textColor="@android:color/black"
                            />
                    </LinearLayout>

                </RelativeLayout>

                <!-- Button Group -->

                <RadioGroup
                    android:id="@+id/rg_way_to_get_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/rb_by_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_camera_video_by_file" />

                    <RadioButton
                        android:id="@+id/rb_by_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_camera_video_by_time" />

                </RadioGroup>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_record_fun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:id="@+id/no_play_back_txtv"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_margin="@dimen/half_of_normal_margin"
                    />

                <RelativeLayout
                    android:id="@+id/banner_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRecordTimeAxis"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_records"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
</androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/calendar_icon"
        android:layout_marginEnd="16dp"
        app:backgroundTint="@color/colorAccent"
        app:elevation="6dp"
        app:maxImageSize="38dp"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>